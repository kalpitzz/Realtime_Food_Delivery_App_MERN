<section>
    <div class=" login flex items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
          <div>
            <div class="flex items-center  logo-design  rounded-t-2xl ">
                <div class="flex items-center mx-auto">
                    <img src="/img/logo.png"  alt="logo">
                    <h1 class=" text-3xl font-extrabold ml-4 ">Sign In Your Account</h1>                  
                </div>
            </div>
         
            <p class="mt-2 text-center text-sm text-gray-600">
            </p>
          </div>
          <form class="mt-8 space-y-6" action="#" method="POST">
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
              <div>
                <label for="email-address" class="sr-only ">Email address</label>
                <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-500 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
              </div>
              <div >
                <label for="password" class="sr-only">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-500 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
              </div>
            </div>
      
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="remember_me" class="ml-2 block text-sm forget-pass">
                  Remember me
                </label>
              </div>
      
              <div class="text-sm">
                <div class="py-2 ">
                    <a href="#" class="forget-pass">
                        Forgot your password ?
                    </a>
                </div>
                <a href="/register"  class="forget-pass">
                    Don't have account ?
                  </a>
              </div>
            </div>
          
            <div>
              <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-xl font-extrabold rounded-md text-white btn-primary  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                  <!-- Heroicon name: solid/lock-closed -->
                  <svg class="h-5 w-5 text-white " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                Sign in
              </button>
            
              <div >
                <div class="flex justify-around text-xl font-bold py-4">or</div>
                <button class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-xl font-extrabold rounded-md text-white btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                       <img src="/img/google_logo.png" class="h-8 w-auto">
                      </span>
                    Sign in via Google
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>  

</section>