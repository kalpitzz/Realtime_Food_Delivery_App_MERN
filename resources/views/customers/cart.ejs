<section class="cart py-16">
    <%if(!session.cart){%>
    <section class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty üôÅ</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet ,<br> to order a pizza , go
                to main page </p>
            <img src="/img/empty-cart.png" class="w-2/5 mx-auto" alt="Empty Cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </section>
    <%}else{%>
    <div class="order container mx-auto w-1/2">
        <div class=" flex items-center border-b border-gray-300  pb-4">
            <img src="/img/cart-black.png">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <%for(let pizza of Object.values(session.cart.items)){%>
            <div class="flex items-center my-8">
                <img src="/img/<%=pizza.item.image%>" class="w-24" alt="">
                <div class="ml-4 flex-1">
                    <h1><%=pizza.item.name%></h1>
                    <span><%=pizza.item.size%></span>
                </div>
                <span class="flex-1"><%=pizza.qty%> Pcs</span>
                <span class="font-bold text-lg">‚Çπ<%=pizza.item.price * pizza.qty%></span>
            </div>
            <%}%>
            
           
            <hr>

            <div class="text-right py-4">
                <div >
                    <span class="text-lg font-bold ">Total Amount :</span>
                    <span class="amount text-2xl font-bold ml-4">‚Çπ<%= session.cart.totalPrice%></span>
        </div>
        <div>
            <form action="" class="mt-12">
                <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
            </form>
            <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order
                Now</button>
        </div>
       
    </div>
    <%}%>
        
        </div>
    </div>

    

</section>